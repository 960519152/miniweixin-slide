
.content1{
  width: 100%;
}
.content-scroll{
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.content-scroll-text{
  position: absolute;
  left: 0px;
  width: 100%;
  background: #ece7e7;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: 0.5s;
}
.content-scroll-bt{
  position: absolute;
  left:calc(100% - 0px);
  text-align: center;
  color: #ffffff;
  letter-spacing: 2px;
}
.content-scroll-bt-shanchu{
  height: 50px;
  background: #ff6000;
  color:#ffffff;
}